<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:backgroundTint="#80050505"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SplashScreen">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/letsgrowmore" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/covid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/belleza"
        android:text="COVID-19 TRACKER"
        android:textColor="@color/color_white"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/belleza"
        android:text="SUBMITTED BY"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/belleza"
        android:text="Mohmaed afsal"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_two"
        android:textSize="20sp"
        />


</LinearLayout>